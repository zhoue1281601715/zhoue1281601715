@import '/lib/iconfont.wxss';

page {
  background: #F2F2F2;
}

.main {
  padding: 24rpx 18rpx 118rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.recordsDetails {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  border-radius: 6rpx;
  background: #FFFFFF;
}

.select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 18rpx 0 38rpx;
  height: 82rpx;
  border-bottom: 2rpx solid #E5E5E5;
}

.select-title {
  flex: 1;
  font-size: 28rpx;
  color: #010101;
}

.selector {
  flex: 4;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.selector-no-arrow {
  padding-right: 60rpx;
}

.picker-default {
  font-size: 24rpx;
  color: #818181;
}

.picker-val {
  font-size: 24rpx;
  color: #010101;
}

.line {
  margin: 0 52rpx;
  font-size: 34rpx;
  color: #818181;
}

.more-icon {
  margin-left: 30rpx;
  height: 30rpx;
}

.keyword-input {
  flex: 1;
  height: 80rpx;
  font-size: 24rpx;
  color: #010101;
  text-align: right;
}

.query {
  margin: 20rpx auto;
  width: 646rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  border-radius: 42rpx;
  background: linear-gradient(to right, #FF7900, #FF4B00);
}

.queryResults {
  margin-bottom: 24rpx;
  padding-bottom: 36rpx;
  width: 100%;
  border-radius: 6rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
}

.queryResults:last-child {
  margin: 0;
}

.queryTitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 58rpx 0 36rpx;
  height: 84rpx;
  border-bottom: 2rpx solid #E5E5E5;
  box-sizing: border-box;
}

.queryTitle view {
  font-size: 28rpx;
  color: #000000;
}

.queryTitle .state {
  font-size: 24rpx;
  color: #FF5201;
}

.number {
  margin-top: 26rpx;
  padding: 0 36rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}

.queryContent {
  display: flex;
  justify-content: space-between;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.queryText view {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.remark {
  padding: 0 36rpx;
  width: 100%;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #000000;
  box-sizing: border-box;
}

.queryTime {
  margin-top: 20rpx;
  padding: 0 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.queryTime-left {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #818181;
}

.clock-icon {
  margin-right: 6rpx;
  height: 24rpx;
}

.viewDetails {
  padding: 0 6rpx;
  height: 32rpx;
  line-height: 28rpx;
  font-size: 24rpx;
  color: #FF5500;
  border: 2rpx solid #FF5500;
  border-radius: 16rpx;
}