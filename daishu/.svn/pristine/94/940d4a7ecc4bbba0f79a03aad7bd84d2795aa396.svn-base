@import '/lib/iconfont.wxss';

.main {
  padding: 20rpx 24rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.address-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 36rpx 32rpx 20rpx;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.address-icon {
  width: 58rpx;
}

.address-data {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
}

.user-data {
  display: flex;
  align-items: baseline;
  font-size: 24rpx;
  color: #6B6969;
}

.username {
  font-size: 28rpx;
  color: #000000;
}

.address {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #000000;
}

.choose-address {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
}

.more-icon image {
  width: 32rpx;
  vertical-align: bottom;
}

.order-area {
  margin-top: 18rpx;
  padding: 14rpx 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.goods-data-area {
  display: flex;
  padding-bottom: 20rpx;
  width: 100%;
  border-bottom: 2rpx solid #E5E5E5;
}

.goods-picture-area {
  width: 184rpx;
  height: 184rpx;
  background-color: #E5E5E5;
  border-radius: 10rpx;
  overflow: hidden;
}

.goods-picture {
  width: 184rpx;
  height: 184rpx;
}

.goods-data {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 28rpx;
  padding-top: 6rpx;
  width: 0;
  height: 184rpx;
}

.goods-name {
  line-height: 34rpx;
  font-size: 30rpx;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-size {
  line-height: 48rpx;
  font-size: 24rpx;
  color: #A9A9A9;
}

.goods-price-area {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.goods-price {
  display: flex;
  align-items: baseline;
  font-size: 30rpx;
  color: #FF5201;
}

.yuan {
  font-size: 18rpx;
}

.goods-num {
  font-size: 26rpx;
  color: #6B6969;
}

.order-type-area {
  padding: 32rpx 24rpx 30rpx 66rpx;
  width: 100%;
  box-sizing: border-box;
}

.order-type-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 42rpx;
}

.order-type-name {
  font-size: 26rpx;
  color: #000000;
}

.take-over-type {
  display: flex;
}

.take-over-type-item {
  margin-left: 18rpx;
  display: flex;
  align-items: center;
}

.radio {
  width: 22rpx;
  height: 22rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 50%;
  box-sizing: border-box;
}

.radio-activity {
  border-color: #FF4A00;
  background-color: #FF4A00;
}

.take-over-type-name {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #000000;
}

.total-area {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.total {
  font-size: 22rpx;
  color: #000000;
}

.btn-area {
  position: fixed;
  bottom: 94rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 0 24rpx;
  width: 750rpx;
  height: 130rpx;
  background: linear-gradient(90deg, #FF7900, #FF4B00);
  box-sizing: border-box;
}

.btn-area-left {
  display: flex;
  align-items: center;
}

.payment-area {
  display: flex;
  align-items: baseline;
  font-size: 28rpx;
  color: #FFFFFF;
}

.payment-val {
  font-size: 36rpx;
}

.btn-area-right {
  display: flex;
}

.btn-content {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.btn-bg {
  position: absolute;
  top: -104rpx;
  right: 0;
  width: 256rpx;
}

.buy-btn {
  position: relative;
  width: 256rpx;
  line-height: 86rpx;
  font-size: 34rpx;
  color: #FF5002;
  text-align: center;
  z-index: 9;
}

.popup-area {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .35);
}

.popup-content {
  display: flex;
  align-items: flex-end;
  width: 100%;
  height: 100%;
}

.popup {
  position: relative;
  left: 0;
  transition: bottom 300ms linear;
  padding: 36rpx 20rpx 130rpx;
  width: 100%;
  background-color: #FFFFFF;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  box-sizing: border-box;
}

.close-popup {
  display: flex;
}

.close-icon {
  width: 22rpx;
}

.payment-amount {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-top: 18rpx;
  font-size: 54rpx;
  color: #000000;
  font-family: AlibabaPuHuiTiB;
  font-weight: bold;
}

.payment-amount .yuan {
  font-size: 28rpx;
}

.payment-type {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 68rpx;
  padding-bottom: 44rpx;
}

.payment-type-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.payment-type-icon {
  width: 142rpx;
}

.payment-name {
  margin-top: 18rpx;
  font-size: 28rpx;
  color: #010101;
}