}

.phone-row > view:nth-of-type(5n),
.phone-row > view:nth-of-type(1){
  margin-left: 0 !important;
}

.phone-col{
	/* width: 158rpx;
	height: 158rpx; */
	box-sizing: border-box;
	margin: 0 0 18rpx 18rpx;
	position: relative;
  float: left;
  overflow: hidden;
}

.k{
  overflow: hidden;
  width: 100%;
	height: 100%;
}

.close{
	width: 80rpx;
  height: 80rpx;
	background: rgba(0,0,0,.5);
	font-size: 12px;
	text-align: center;
	line-height: 60rpx;
	position: absolute;
  color: #fff;
  border-radius: 50%;
	font-family: '黑体';
  top: 0;
  transform: translate(50%, -50%);
  z-index: 50;
	right: 0;
}

.close:after{
	content: '';
	display: block;
	width: 1px;
	height: 20rpx;
	position: absolute;
	background: #fff;
	top: 46rpx;
  left: 22rpx;
	transform: rotate(45deg);
}

.close:before{
	content: '';
	display: block;
	width: 1px;
	height: 20rpx;
	position: absolute;
	background: #fff;
	top: 46rpx;
	left: 22rpx;
	transform: rotate(-45deg);
}

.addPhotos{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 28rpx;
  text-align:center;
  color: #fff;
  background: #8BC34A;
  line-height: 100rpx;
  border-radius: 0;
}