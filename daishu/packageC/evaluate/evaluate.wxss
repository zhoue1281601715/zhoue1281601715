.main {
  padding: 24rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.container {
  padding: 20rpx;
  width: 100%;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
}

.goods-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-picture-area {
  width: 102rpx;
  height: 102rpx;
  border-radius: 6rpx;
  background-color: #E5E5E5;
  overflow: hidden;
}

.goods-picture {
  width: 102rpx;
  height: 102rpx;
}

.goods-name {
  flex: 1;
  margin-left: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  color: #818181;
}

.tip {
  margin-top: 22rpx;
  height: 68rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  color: #1A1A1A;
  border-bottom: 2rpx solid #E5E5E5;
}

.evaluate {
  padding: 12rpx;
  width: 100%;
  height: 168rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #1A1A1A;
}

.picture-area {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.upload-picture {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  width: 208rpx;
  height: 180rpx;
  border: 2rpx solid #E5E5E5;
  background-color: #F9F9F9;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.camere-icon {
  width: 40rpx;
}

.upload-picture text {
  font-size: 24rpx;
  color: #1A1A1A;
}

.picture-item {
  position: relative;
  margin-bottom: 20rpx;
  width: 208rpx;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #F9F9F9;
  overflow: hidden;
}

.picture {
  width: 208rpx;
  height: 180rpx;
}

.remove {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 20rpx;
  z-index: 9;
}

.remove-icon {
  width: 24rpx;
}

.area {
  width: 208rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.submit-btn {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 34rpx;
  color: #FFFFFF;
  text-align: center;
  border-radius: 42rpx;
  background: linear-gradient(90deg, #FF7900, #FF4B00);
}