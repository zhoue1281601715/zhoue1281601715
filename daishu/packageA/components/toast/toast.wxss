.toast-area {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999999999;
}

.toast-hide {
  display: none;
}

.toast {
  position: relative;
  width: 300rpx;
  height: auto;
}

.toast-icon {
  width: 300rpx;
  vertical-align: bottom;
}

.toast-content {
  position: absolute;
  left: 0;
  bottom: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-left: 8rpx;
  width: 300rpx;
  height: 132rpx;
  box-sizing: border-box;
}

.toast-icon {
  width: 38rpx;
  margin-bottom: 24rpx;
}

.toast-tip {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  text-align: center;
}