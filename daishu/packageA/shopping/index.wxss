@import '/lib/iconfont.wxss';

page {
  background-color: #F2F2F2;
}

.header {
  position: relative;
  top: -2rpx;
  overflow: hidden;
}

/* banner图开始 */
.banner {
  position: relative;
  width: 750rpx;
  height: 402rpx;
}

.banner swiper {
  width: 750rpx;
  height: 402rpx;
}

.banner-img {
  width: 750rpx;
  height: 402rpx;
  vertical-align: bottom;
}
/* banner图结束 */

.header-position-content {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  padding: 28rpx 18rpx 0;
}

.search-content {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 8rpx;
  width: 0;
  height: 42rpx;
  background-color: rgba(255, 255, 255, .5);
  border-radius: 21rpx;
  box-sizing: border-box;
}

.search-icon {
  height: 30rpx;
}

.search-input {
  flex: 1;
  padding: 0 8rpx;
  height: 42rpx;
  font-size: 20rpx;
  color: #FF4B00;
  box-sizing: border-box;
}

.input-placeholder {
  color: rgba(255, 75, 0, .5);
}

.shopping-car {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 24rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .5);
}

.shopping-car-icon {
  width: 36rpx;
  vertical-align: bottom;
}

.choose-btn-area {
  position: absolute;
  bottom: 146rpx;
  left: 28rpx;
}

.choose-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0 0 0 10rpx;
  width: 178rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  background-color: #FFAD0C;
  box-shadow: 4rpx 4rpx 4rpx 0 rgba(0, 0, 0, .3);
}

.choose-btn .iconfont {
  margin-left: 6rpx;
  height: 76rpx;
  font-size: 20rpx;
}

.main {
  position: relative;
  margin-top: -60rpx;
  padding: 0 20rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.nav-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 170rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, .2);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-icon {
  height: 52rpx;
  width: 52rpx;
}

.nav-name {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #3B3B3B;
}

.goods-content {
  margin-top: 16rpx;
}

.goods-nav {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 8rpx;
}

.goods-nav-item {
  flex: 1;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  padding: 6rpx;
  width: 346rpx;
  border-radius: 10rpx;
  background: linear-gradient(90deg, #FF7900, #FF4B00);
}

.goods-nav-item:nth-child(2n) {
  margin-right: 0;
}

.goods-nav-title {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-indent: 16rpx;
}

.goods-nav-content {
  position: relative;
  width: 100%;
  height: 180rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  overflow: hidden;
}

.goods-nav-picture {
  width: 100%;
  height: 180rpx;
  vertical-align: bottom;
}

.goods-nav-position {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx 12rpx 26rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.goods-nav-slogan {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #FF4B00;
}

.goods-nav-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0 0 0 10rpx;
  width: 124rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  background: linear-gradient(90deg, #FF7900, #FF4B00);
}

.goods-nav-btn .iconfont {
  margin-left: 2rpx;
  height: 80rpx;
  font-size: 14rpx;
}

.goods-list {
  display: flex;
  justify-content: space-between;
  padding-bottom: 94rpx;
  flex-wrap: wrap;
}

.goods-list-left, .goods-list-right {
  width: 350rpx;
}

.goods-item {
  margin-bottom: 14rpx;
  padding-bottom: 32rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  overflow: hidden;
  width: 49%;
}

.goods-picture-area {
  width: 350rpx;
  height: 350rpx;
  overflow: hidden;
}

.goods-picture {
  width: 350rpx;
  height: 350rpx;
  vertical-align: bottom;
  background-color: #E5E5E5;
}

.goods-data {
  margin-top: 10rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.goods-label {
  display: inline-block;
  margin-right: 10rpx;
  padding: 0 8rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: #FE6706;
  border-radius: 6rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #010101;
}

.goods-price-area {
  display: flex;
  align-items: baseline;
  margin-top: 14rpx;
}

.yuan {
  font-size: 20rpx;
  color: #FF6400;
}

.goods-price {
  font-size: 34rpx;
  color: #FF6400;
}

.payment-num {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #909090;
}

.more {
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #909090;
}

.nodata {
  padding: 50rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #818181;
}