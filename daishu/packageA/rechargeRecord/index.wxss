page {
  padding-bottom: 94rpx;
}

.nav-area {
  position: fixed;
  left: 0;
  width: 750rpx;
  padding-bottom: 28rpx;
  background-color: #F2F2F2;
  z-index: 9;
}

.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.nav-item {
  padding: 0 10rpx;
  height: 76rpx;
  line-height: 74rpx;
  font-size: 24rpx;
  color: #000000;
  border-bottom: 2rpx solid #F2F2F2;
}

.nav-item.active {
  color: #FF5201;
  border-color: #FF5201;
}

.rechargeData {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
  padding: 0 60rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.rechargeText {
  display: flex;
  align-items: baseline;
  font-size: 24rpx;
  color: #000000;
}

.picker {
  padding: 0 20rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  font-family: AlibabaPuHuiTiR;
  color: #6B6969;
  border-bottom: 2rpx solid #E5E5E5;
}

.line {
  width: 100rpx;
  height: 0;
  border-bottom: 2rpx solid #E5E5E5;
}

.recharge-content {
  padding: 22rpx 0;
  width: 750rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}

.recharge-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.radio-area {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
}

.radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #FF5101;
}

.recharge-item .recharge-item-right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 34rpx 18rpx 0;
  border-bottom: 2rpx solid #E9E9E9;
}

.recharge-item:first-child .recharge-item-right{
  border-top: 2rpx solid #E9E9E9;
}

.recharge-name {
  width: 326rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #000000;
}

.recharge-time {
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #6B6969;
}

.recharge-amount {
  font-size: 24rpx;
  color: #000000;
}

.nodata {
  padding: 50rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #818181;
}